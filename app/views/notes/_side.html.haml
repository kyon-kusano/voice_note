.side
  .side__header
    .side__header__box
      .side__header__box__user-name
        = current_user.name
      .side__header__box__icons
        .side__header__box__icons--plus
          = link_to new_note_path, class: "icon-plus" do
            = icon('far','plus-square')
        .side__header__box__icons--cog
          = link_to edit_user_path(current_user), class: "icon-cog" do
            = icon('fas','cog')
  .side__list
    - current_user.notes.each do |note|
      .side__list__note
        = link_to note_path(note.id) do
          .side__list__note__title
            = note.title
    .side__list__search